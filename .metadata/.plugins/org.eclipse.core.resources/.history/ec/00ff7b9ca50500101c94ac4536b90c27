    <script>
    function fetchRanking() {
        fetch('/api/ranking')
            .then(response => response.json())
            .then(data => {
                console.log("ğŸ“Š ë­í‚¹ ë°ì´í„° í™•ì¸:", data);

                let rankingTable = document.getElementById("rankingTable");
                rankingTable.innerHTML = ""; // ê¸°ì¡´ ë°ì´í„° ì‚­ì œ

                if (!data || data.length === 0) {
                    rankingTable.innerHTML = "<tr><td colspan='5'>ë°ì´í„° ì—†ìŒ</td></tr>";
                    return;
                }

                let rank = 1;
                let prevScore = null;

                data.forEach((player, index) => {
                    console.log(`ğŸ¯ í”Œë ˆì´ì–´ ${rank}:`, player);

                    let playerId = player.playerId || "(ë°ì´í„° ì—†ìŒ)";
                    let score = player.score || 0;
                    let wins = player.wins || 0;
                    let losses = player.losses || 0;

                    // âœ… ì ìˆ˜ê°€ ë‹¤ë¥¼ ë•Œë§Œ ìˆœìœ„(rank) ì¦ê°€
                    if (prevScore !== null && prevScore !== score) {
                        rank = index + 1;
                    }
                    prevScore = score;

                    let row = document.createElement("tr");

                    row.innerHTML = `
                        <td>${rank}</td>
                        <td>${playerId}</td>
                        <td>${score}</td>
                        <td>${wins}</td>
                        <td>${losses}</td>
                    `;

                    rankingTable.appendChild(row);
                });
            })
            .catch(error => console.error("ğŸš¨ ë­í‚¹ ì¡°íšŒ ì‹¤íŒ¨:", error));
    }

    function goToMatchGame() {
        window.location.href = "/game/match";
    }

    window.onload = fetchRanking;
    </script>

