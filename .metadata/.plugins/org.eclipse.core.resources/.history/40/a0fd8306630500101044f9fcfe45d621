    <script>
        $(document).ready(function() {
            fetch("/api/ranking")
                .then(response => response.json())
                .then(data => {
                    let tableBody = $("#rankingTable");
                    tableBody.empty(); // ê¸°ì¡´ ë‚´ìš© ì‚­ì œ

                    if (data.length === 0) {
                        tableBody.append("<tr><td colspan='4'>ë­í‚¹ ì •ë³´ ì—†ìŒ</td></tr>");
                        return;
                    }

                    data.forEach((player, index) => {
                        let row = `<tr>
                            <td>${index + 1}</td>
                            <td>${player.playerId}</td>
                            <td>${player.score}</td>
                            <td>${player.winRate.toFixed(2)}%</td>
                        </tr>`;
                        tableBody.append(row);
                    });
                })
                .catch(error => {
                    console.error("ë­í‚¹ ë¶ˆëŸ¬ì˜¤ê¸° ì‹¤íŒ¨:", error);
                    $("#rankingTable").html("<tr><td colspan='4'>ë°ì´í„°ë¥¼ ë¶ˆëŸ¬ì˜¤ì§€ ëª»í–ˆìŠµë‹ˆë‹¤.</td></tr>");
                });
