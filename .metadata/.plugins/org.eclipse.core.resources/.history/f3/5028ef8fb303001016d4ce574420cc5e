package com.care.boot.gamedto;

public class GameRequest {
    private String playerId;  // ì‚¬ìš©ì ID (ë¡œê·¸ì¸ ID)
    private String move;      // ê°€ìœ„/ë°”ìœ„/ë³´ ì„ íƒ
    private String mode;      // ê²Œì„ ëª¨ë“œ (server: ì„œë²„ vs ì‚¬ìš©ì, player: ì‚¬ìš©ì vs ì‚¬ìš©ì)

    // ê¸°ë³¸ ìƒì„±ì (JSON ë³€í™˜ ì‹œ í•„ìš”)
    public GameRequest() {}

    // ì „ì²´ í•„ë“œë¥¼ í¬í•¨í•œ ìƒì„±ì
    public GameRequest(String playerId, String move, String mode) {
        this.playerId = playerId;
        this.move = move;
        private String mode = "server"; // ğŸ”¹ ê¸°ë³¸ê°’ ì„¤ì •
    }

    // Getter & Setter
    public String getPlayerId() {
        return playerId;
    }

    public void setPlayerId(String playerId) {
        this.playerId = playerId;
    }

    public String getMove() {
        return move;
    }

    public void setMove(String move) {
        this.move = move;
    }

    public String getMode() {
        return (mode == null || mode.isEmpty()) ? "server" : mode; // ğŸ”¹ null ë°©ì§€
    }

    public void setMode(String mode) {
        this.mode = mode;
    }

    @Override
    public String toString() {
        return "GameRequest{" +
                "playerId='" + playerId + '\'' +
                ", move='" + move + '\'' +
                ", mode='" + mode + '\'' +
                '}';
    }
}
