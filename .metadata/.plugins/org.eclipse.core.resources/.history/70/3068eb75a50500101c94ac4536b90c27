    <script>
    function fetchRanking() {
        fetch('/api/ranking')
            .then(response => response.json())
            .then(data => {
                console.log("ğŸ“Š ë­í‚¹ ë°ì´í„° í™•ì¸:", data);
                let rankingTable = document.getElementById("rankingTable");
                rankingTable.innerHTML = ""; // ê¸°ì¡´ ë°ì´í„° ì‚­ì œ

                if (!data || data.length === 0) {
                    rankingTable.innerHTML = "<tr><td colspan='5'>ë°ì´í„° ì—†ìŒ</td></tr>";
                    return;
                }

                let rank = 1; // âœ… ìˆœìœ„ ì´ˆê¸°í™”
                let prevScore = null;
                let prevRank = 1;

                data.forEach((player, index) => {
                    console.log(`ğŸ¯ í”Œë ˆì´ì–´ ${rank}:`, player);

                    let playerId = player.playerId ? player.playerId : "(ë°ì´í„° ì—†ìŒ)";
                    let score = !isNaN(player.score) ? player.score : 0;
                    let wins = !isNaN(player.wins) ? player.wins : 0;
                    let losses = !isNaN(player.losses) ? player.losses : 0;

                    // âœ… ê°™ì€ ì ìˆ˜ë©´ ê°™ì€ ìˆœìœ„ë¥¼ ìœ ì§€, ë‹¤ë¥´ë©´ ìˆœìœ„ ì¦ê°€
                    if (prevScore !== null && prevScore !== score) {
                        prevRank = index + 1;
                    }
                    prevScore = score;

                    let row = `
                        <tr>
                            <td>${prevRank}</td>
                            <td>${playerId}</td>
                            <td>${score}</td>
                            <td>${wins}</td>
                            <td>${losses}</td>
                        </tr>
                    `;
                    rankingTable.innerHTML += row;
                });
            })
            .catch(error => console.error("ğŸš¨ ë­í‚¹ ì¡°íšŒ ì‹¤íŒ¨:", error));
    }

    function goToMatchGame() {
        window.location.href = "/game/match"; // ë§¤ì¹­ í˜ì´ì§€ë¡œ ì´ë™
    }

    window.onload = fetchRanking; // í˜ì´ì§€ ë¡œë“œ ì‹œ ë­í‚¹ ê°€ì ¸ì˜¤ê¸°
