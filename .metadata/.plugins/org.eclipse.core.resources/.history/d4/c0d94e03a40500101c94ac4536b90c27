    <script>
        function fetchRanking() {
            fetch('/api/ranking')
                .then(response => {
                    if (!response.ok) {
                        throw new Error(`HTTP ì˜¤ë¥˜! ìƒíƒœ ì½”ë“œ: ${response.status}`);
                    }
                    return response.json();
                })
                .then(data => {
                    console.log("ğŸ“Š ë­í‚¹ ë°ì´í„° í™•ì¸:", data);
                    let rankingTable = document.getElementById("rankingTable");
                    rankingTable.innerHTML = ""; // ê¸°ì¡´ ë°ì´í„° ì‚­ì œ

                    if (!data || data.length === 0) {
                        rankingTable.innerHTML = "<tr><td colspan='5'>ë°ì´í„° ì—†ìŒ</td></tr>";
                        return;
                    }

                    data.forEach((player, index) => {
                        console.log(`ğŸ¯ í”Œë ˆì´ì–´ ${index + 1}:`, player); // âœ… ë°ì´í„° ì¶œë ¥

                        let playerId = String(player.playerId || "(ë°ì´í„° ì—†ìŒ)");
                        let score = Number(player.score) || 0;
                        let wins = Number(player.wins) || 0;
                        let losses = Number(player.losses) || 0;

                        let row = `
                            <tr>
                                <td>${index + 1}</td>
                                <td>${playerId}</td>
                                <td>${score}</td>
                                <td>${wins}</td>
                                <td>${losses}</td>
                            </tr>
                        `;
                        rankingTable.innerHTML += row;
                    });
                })
                .catch(error => console.error("ğŸš¨ ë­í‚¹ ì¡°íšŒ ì‹¤íŒ¨:", error));
        }

        function goToMatchGame() {
            window.location.href = "/game/match"; // ë§¤ì¹­ í˜ì´ì§€ë¡œ ì´ë™
        }

        window.onload = fetchRanking; // í˜ì´ì§€ ë¡œë“œ ì‹œ ë­í‚¹ ê°€ì ¸ì˜¤ê¸°
    </script>

