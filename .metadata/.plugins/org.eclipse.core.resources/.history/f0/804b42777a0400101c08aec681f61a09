    <script>
        var playerId = "<%= playerId %>";
        var opponent = null;
        var socket = new SockJS('/game'); // âœ… WebSocket ì—”ë“œí¬ì¸íŠ¸
        var stompClient = Stomp.over(socket);

        stompClient.connect({}, function(frame) {
            console.log("âœ… WebSocket ì—°ê²° ì„±ê³µ!", frame);

            // âœ… ì˜¨ë¼ì¸ í”Œë ˆì´ì–´ ëª©ë¡ ìš”ì²­
            stompClient.send("/app/onlinePlayers", {}, JSON.stringify({ playerId: playerId }));

            // âœ… ì˜¨ë¼ì¸ í”Œë ˆì´ì–´ ëª©ë¡ êµ¬ë…
            stompClient.subscribe('/topic/onlinePlayers', function(response) {
                var players;
                try {
                    players = JSON.parse(response.body);
                } catch (e) {
                    console.error("âŒ JSON íŒŒì‹± ì˜¤ë¥˜:", e);
                    return;
                }

                var playerList = document.getElementById("onlinePlayers");
                playerList.innerHTML = "";
                players.forEach(function(player) {
                    if (player !== playerId) { 
                        var li = document.createElement("li");
                        li.textContent = player;
                        li.onclick = function() { setOpponent(player); };
                        playerList.appendChild(li);
                    }
                });
            });

            // âœ… ë§¤ì¹­ ê²°ê³¼ êµ¬ë…
            stompClient.subscribe('/topic/match/' + playerId, function(response) {
                var matchedOpponent;
                try {
                    matchedOpponent = JSON.parse(response.body).opponent;
                } catch (e) {
                    console.error("âŒ ë§¤ì¹­ JSON íŒŒì‹± ì˜¤ë¥˜:", e);
                    return;
                }
                opponent = matchedOpponent;
                document.getElementById("opponent").innerText = opponent;
            });

            // âœ… ê²°ê³¼ êµ¬ë…
            stompClient.subscribe('/topic/result/' + playerId, function(response) {
                var gameResult;
                try {
                    gameResult = JSON.parse(response.body);
                } catch (e) {
                    console.error("âŒ ê²°ê³¼ JSON íŒŒì‹± ì˜¤ë¥˜:", e);
                    return;
                }

                document.getElementById("result").innerText = 
                    "ë‚´ ì„ íƒ: " + (gameResult.playerMove || "âŒ ì•Œ ìˆ˜ ì—†ìŒ") + 
                    " | ìƒëŒ€ ì„ íƒ: " + (gameResult.opponentMove || "âŒ ì•Œ ìˆ˜ ì—†ìŒ") + 
                    " | ê²°ê³¼: " + (gameResult.result || "âŒ ì•Œ ìˆ˜ ì—†ìŒ");
            });

        }, function(error) {
            console.error("âŒ WebSocket ì—°ê²° ì‹¤íŒ¨:", error);
            alert("âš  WebSocket ì—°ê²°ì´ ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤. ì„œë²„ë¥¼ í™•ì¸í•˜ì„¸ìš”.");
        });

        function setOpponent(selectedOpponent) {
            opponent = selectedOpponent;
            document.getElementById("opponent").innerText = selectedOpponent;
        }

        function sendMove(move) {
            var selectedMode = document.getElementById("modeSelect").value;
            if (stompClient && stompClient.connected) {  
                stompClient.send("/app/play", {}, JSON.stringify({ 
                    playerId: playerId, 
                    move: move,
                    mode: selectedMode,
                    opponent: opponent 
                }));
            } else {
                alert("âš  WebSocket ì—°ê²°ì´ ëŠì–´ì¡ŒìŠµë‹ˆë‹¤. í˜ì´ì§€ë¥¼ ìƒˆë¡œê³ ì¹¨í•˜ì„¸ìš”.");
                console.error("âŒ WebSocket ì—°ê²° ëŠê¹€");
