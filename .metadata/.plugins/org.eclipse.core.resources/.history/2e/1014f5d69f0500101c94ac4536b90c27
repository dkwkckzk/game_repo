    <script>
        function fetchRanking() {
            fetch('/api/ranking')
                .then(response => response.json())
                .then(data => {
                    let rankingTable = document.getElementById("rankingTable");
                    rankingTable.innerHTML = ""; // ê¸°ì¡´ ë°ì´í„° ì‚­ì œ

                    data.forEach((player, index) => {
                        let row = `
                            <tr>
                                <td>${index + 1}</td>
                                <td>${player.playerId}</td>
                                <td>${player.score}</td>
                                <td>${player.wins}</td>
                                <td>${player.losses}</td>
                            </tr>
                        `;
                        rankingTable.innerHTML += row;
                    });
                })
                .catch(error => console.error("ë­í‚¹ ì¡°íšŒ ì‹¤íŒ¨:", error));
        }

        function goToMatchGame() {
            window.location.href = "/game/match"; // ë§¤ì¹­ í˜ì´ì§€ë¡œ ì´ë™
        }

        window.onload = fetchRanking; // í˜ì´ì§€ ë¡œë“œ ì‹œ ë­í‚¹ ê°€ì ¸ì˜¤ê¸°
    </script>

