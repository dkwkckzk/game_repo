    <script>
        var playerId = "<%= playerId %>";
        var opponent = null;
        var winCount = 0;
        var loseCount = 0;
        var isGameOver = false; 
        var socket = null;
        var stompClient = null;

        function connectWebSocket() {
            if (stompClient && stompClient.connected) {
                stompClient.disconnect();
            }

            socket = new SockJS('/game');
            stompClient = Stomp.over(socket);

            stompClient.connect({}, function () {
                console.log("âœ… WebSocket ì—°ê²° ì„±ê³µ");

                stompClient.subscribe('/topic/match/' + playerId, function (response) {
                    opponent = response.body;
                    if (opponent.startsWith('âŒ')) {
                        document.getElementById("status").innerText = opponent;
                    } else {
                        document.getElementById("status").innerText = "âœ… ë§¤ì¹­ ì„±ê³µ! ìƒëŒ€: " + opponent;
                        document.getElementById("opponent").innerText = opponent;
                        document.getElementById("matchButton").style.display = "none";
                        document.getElementById("rematchButton").style.display = "none";
                        document.getElementById("serverMatchButton").style.display = "none";
                        enableGameButtons(true);
                        isGameOver = false;
                    }
                });

                stompClient.subscribe('/topic/result/' + playerId, function (response) {
                    var gameResult = JSON.parse(response.body);
                    document.getElementById("result").innerText =
                        "ë‚´ ì„ íƒ: " + gameResult.player1Move + 
                        " | ìƒëŒ€ ì„ íƒ: " + gameResult.player2Move + 
                        " | ê²°ê³¼: " + gameResult.result;

                    if (gameResult.result === "ìŠ¹ë¦¬") {
                        winCount++;
                    } else if (gameResult.result === "íŒ¨ë°°") {
                        loseCount++;
                    }

                    document.getElementById("score").innerText = winCount;

                    if (winCount === 3 || loseCount === 3) {
                        endGame();
                    } else {
                        enableGameButtons(true);
                    }

                    // âœ… ê²Œì„ ê²°ê³¼ ì—…ë°ì´íŠ¸ í›„ ì ìˆ˜ ë‹¤ì‹œ ê°€ì ¸ì˜¤ê¸°
                    fetchPlayerScore();
                });

                stompClient.subscribe('/topic/match/end/' + playerId, function () {
                    endGame();
                });

                console.log("ğŸ“¢ WebSocket ì´ë²¤íŠ¸ ë¦¬ìŠ¤ë„ˆ ë“±ë¡ ì™„ë£Œ");
            });
        }

        function startMatching() {
            if (isGameOver) {
                resetGame();
            }
            document.getElementById("status").innerText = "ë§¤ì¹­ ì¤‘...";
            stompClient.send("/app/match", {}, JSON.stringify({ playerId: playerId }));
        }

        function sendMove(move) {
            if (isGameOver) return;
            stompClient.send("/app/play", {}, JSON.stringify({ 
                playerId: playerId,
                move: move
            }));
            document.getElementById("status").innerText = "ê²°ê³¼ ëŒ€ê¸° ì¤‘...";
        }

        function enableGameButtons(enable) {
            ["btnScissors", "btnRock", "btnPaper"].forEach(id => {
                document.getElementById(id).disabled = !enable;
            });
        }

        function endGame() {
            if (isGameOver) return;
            isGameOver = true;
            enableGameButtons(false);

            if (winCount === 3) {
                document.getElementById("status").innerText = "ğŸ‰ 3ì„ ìŠ¹ ì™„ë£Œ! ë‹¤ì‹œ ë§¤ì¹­ì„ ì„ íƒí•˜ì„¸ìš”.";
            } else if (loseCount === 3) {
                document.getElementById("status").innerText = "âŒ íŒ¨ë°°! ë‹¤ì‹œ ë§¤ì¹­ì„ ì„ íƒí•˜ì„¸ìš”.";
            }

            document.getElementById("rematchButton").style.display = "inline";
            document.getElementById("serverMatchButton").style.display = "inline";
        }

        function goToServerMatch() {
            location.href = "/game";
        }

        function goToRanking() {
        	location.href = "/game/ranging"; // âœ… ë­í‚¹ í˜ì´ì§€ë¡œ ì´ë™
        }

        function resetGame() {
            winCount = 0;
            loseCount = 0;
            isGameOver = false;
            opponent = null;
            document.getElementById("score").innerText = winCount;
            document.getElementById("opponent").innerText = "ì—†ìŒ";
            document.getElementById("result").innerText = "ê²°ê³¼ê°€ ì—¬ê¸°ì— í‘œì‹œë©ë‹ˆë‹¤.";
            document.getElementById("rematchButton").style.display = "none";
            document.getElementById("serverMatchButton").style.display = "none";
        }

        function fetchPlayerScore() {
            fetch('/api/player-score?playerId=' + playerId)
                .then(response => response.json())
                .then(data => {
                    document.getElementById("playerScore").innerText = data.score;
                })
                .catch(error => console.error("ì ìˆ˜ ë¶ˆëŸ¬ì˜¤ê¸° ì‹¤íŒ¨:", error));
        }

        window.onload = function () {
            connectWebSocket();
            fetchPlayerScore();  // âœ… í˜ì´ì§€ ë¡œë“œ ì‹œ ì ìˆ˜ ê°€ì ¸ì˜¤ê¸°
        };
    </script>
